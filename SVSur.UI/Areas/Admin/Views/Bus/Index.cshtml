@model IEnumerable<SVSur.Models.Domain.Bus>
@{
    ViewBag.Title = "Index";
}


<br />
<h2>Bus</h2>
<br />




<div class="row">
    <div class="colm-sm-4">
        <a class="btn btn-primary form-control" href="~/admin/bus/Insertar">Nuevo</a>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr role="row">
                    <th style="width:10%;">Modelo</th>
                    <th style="width:10%;">NLlantas</th>
                    <th style="width:10%;">Chasis</th>
                    <th style="width:10%;">Año Fabricaion</th>
                    <th style="width:10%;">Combustible</th>
                    <th style="width:10%;">Rutina</th>
                    <th style="width:10%;">Placa Bus</th>
                    <th style="width:10%;">Capacidad Bus</th>
                    <th style="width:10%;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Modelo</td>
                        <td>@item.NLlantas</td>
                        <td>@item.Chasis</td>
                        <td>@item.AñoFabricacion</td>
                        <td>@item.Combustible</td>
                        <td>@item.Rutina</td>
                        <td>@item.PlacaBus</td>
                        <td>@item.CapacidadBus</td>
                        <td>
                            <a href="~/admin/bus/modificar/@item.BusID" class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> </a>
                            <a href="~/admin/bus/eliminar/@item.BusID" class="btn btn-sm btn-danger" onclick="return confirm('¿Esta seguro de eliminar este registro?')"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                        </td>
                    </tr>

                  
                   
                }
            </tbody>
        </table>
    </div>
</div>


<div class="row">
    <div class="col-sm-9">
        <!-- paginacion de datos-->
    </div>
    <div class="col-sm-3">
        <div class="row">
            <diV class="col-sm-8">
                <label for="dropdownMenu1" class="control-label">Estado</label>
            </diV>
            <div class="col-sm-4">
                <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        @(ViewBag.estado== true ? "Activo": "Inactivo")
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a href="~/admin/bus/index?estado=true">Activo</a></li>
                        <li><a href="~/admin/bus/index?estado=false">Inactivo</a></li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</div>
