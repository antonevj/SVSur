@model SVSur.Models.Domain.Bus
@{
    ViewBag.Title = "Formulario";
}


<h2>Bus -Detalle</h2>

@using (Html.BeginForm((string)ViewBag.op, "Bus", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    if (Model != null)
    {
        @Html.HiddenFor(model => model.BusID)
    }
    <div class="row">

        <div class="form-group col-sm-3">
            <label class="control-label">Modelo </label>
            @Html.TextBoxFor(model => model.Modelo, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Modelo)
        </div>

        <div class="form-group col-sm-3">
            <label class="control-label">Numero Llantas </label>
            @Html.TextBoxFor(model => model.NLlantas, new { @class = "form-control", Type = "number", step = "0,1" })
            @Html.ValidationMessageFor(model => model.NLlantas)
        </div>

        <div class="form-group col-sm-3">
            <label class="control-label">Chasis </label>
            @Html.TextBoxFor(model => model.Chasis, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Chasis)
        </div>
        <div class="form-group col-sm-3">
            <label class="control-label">Año Fabricacion </label>
            @Html.TextBoxFor(model => model.AñoFabricacion, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AñoFabricacion)
        </div>
    </div>


    <div class="row">
        <div class="form-group col-sm-3">
            <label class="control-label">Combustible </label>
            @Html.TextBoxFor(model => model.Combustible, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Combustible)
        </div>

        <div class="form-group col-sm-3">
            <label class="control-label">Rutina </label>
            @Html.TextBoxFor(model => model.Rutina, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Rutina)
        </div>

        <div class="form-group col-sm-2">
            <label class="control-label">Placa Bus </label>
            @Html.TextBoxFor(model => model.PlacaBus, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PlacaBus)
        </div>
        <div class="form-group col-sm-2">
            <label class="control-label">Capacidad Bus </label>
            @Html.TextBoxFor(model => model.CapacidadBus, new { @class = "form-control", Type = "number", step = "0,1" })
            @Html.ValidationMessageFor(model => model.CapacidadBus)
        </div>
        <div class="form-group col-sm-2">
            <label class="control-label">Estado </label>
            @Html.CheckBoxFor(model => model.Estado, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Estado)
        </div>

    </div>

    <div class="row">
        <div class="col-md-8">
            <button type="submit" class="btn btn-primary form-control">Guardar </button>
        </div>
        <div class="col-sm-4">
            <a href="~/admin/bus/Index" class="btn btn-danger form-control">Cancelar</a>
          
        </div>

    </div>

}

