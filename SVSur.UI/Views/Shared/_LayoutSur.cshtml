@using Microsoft.AspNet.Identity
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>CRUZ DEL SUR</title>

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Slick -->
    <link href="~/Assets/ccs/slick.css" rel="stylesheet" />
    <link href="~/Assets/ccs/slick-theme.css" rel="stylesheet" />

    <!-- nouislider -->
    <link href="~/Assets/ccs/nouislider.min.css" rel="stylesheet" />

    <!-- Font Awesome Icon -->
    <link href="~/Assets/ccs/font-awesome.min.css" rel="stylesheet" />

    <!-- Custom stlylesheet -->
   
    <link href="~/Assets/css/style.css" rel="stylesheet" />
    @RenderSection("MisEstilos", false)

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <!-- HEADER -->
    <header>
       
        <!-- MAIN HEADER -->
        <div id="header">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <!-- LOGO -->
                    <div class="col-md-3">
                        <div class="header-logo">                          
                            <a href="~/home/index" class="logo">
                                <img src="~/Assets/img/logo2.png" height="100" width="200" />
                            </a>
                        </div>
                    </div>
                    <!-- /LOGO -->
                    <!-- SEARCH BAR -->
                    <div class="col-md-3">
                       
                        
                    </div>
                    <!-- /SEARCH BAR -->
                    <!-- ACCOUNT -->
                    <div class="col-md-6 clearfix">
                        <div class="header-ctn">
                            <!-- Cart -->
                            <div class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                    <img src="https://img.icons8.com/emoji/48/000000/peru-emoji.png" />
                                    <span>perú</span>
                                </a>

                            </div>
                            <div class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">

                                    <span>Centro de ayudas</span>

                                </a>

                            </div>

                            <div class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">

                                    <span>(01)311 5050</span>

                                </a>

                            </div>
                            <!-- /Cart -->
                            <!-- logeo -->
                            <div class="dropdown ">
                                <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                    <i class="glyphicon glyphicon-user"></i>
                                    <span>@(Request.IsAuthenticated? @User.Identity.GetUserName() : "Mi cuenta")</span>
                                </a>
                                @if (Request.IsAuthenticated)
                                {



                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                        <li>
                                            <form action="~/account/logoff" method="post" id="logoutForm">
                                                @Html.AntiForgeryToken()
                                                <a href="javascript:document.getElementById('logoutForm').submit()">Cerrar Sesion</a>
                                            </form>
                                        </li>

                                    </ul>


                                }
                                else
                                {
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                        <li><a href="~/account/login">Iniciar Sesion</a></li>
                                        <li><a href="~/account/register">Registrarse</a></li>

                                    </ul>

                                }

                            </div>


                            <!-- /logeo -->


                        </div>
                    </div>
                    <!-- /ACCOUNT -->
                </div>
                <!-- row -->
            </div>
            <!-- container -->
        </div>
        <!-- /MAIN HEADER -->
    </header>
    <!-- /HEADER -->
    <!-- NAVIGATION -->
    <nav id="navigation">
        <!-- container -->
        <div class="container">
            <!-- responsive-nav -->
            <div id="responsive-nav">
                <!-- NAV -->
                <ul class="main-nav nav navbar-nav">
                   
                    <li><a href="#">Destinos</a></li>
                    <li><a href="~/reserva/Ver">Servicios</a></li>
                    <li><a href="#">Tours</a></li>
                    <li><a href="#">Pasajero frecuente</a></li>
                    <li><a href="#">Encuentranos</a></li>
                   

                    @if (User.IsInRole("Admin") || User.IsInRole("Almacenero") || User.IsInRole("Vendedor"))
                    {
                        <li><a href="~/Admin/Administrator">Administrar</a></li>
                    }

                </ul>
                <!-- /NAV -->
            </div>
            <!-- /responsive-nav -->
        </div>
        <!-- /container -->
    </nav>
    <!-- /NAVIGATION -->
    <!-- BREADCRUMB -->
    <!--<div id="breadcrumb" class="section">-->
    <!-- container -->
    <!--<div class="container">-->
    <!-- row -->
    <!--<div class="row">
        <div class="col-md-12">
            <h3 class="breadcrumb-header">Regular Page</h3>
            <ul class="breadcrumb-tree">
                <li><a href="#">Home</a></li>
                <li class="active">Blank</li>
            </ul>
        </div>
    </div>-->
    <!-- /row -->
    <!--</div>-->
    <!-- /container -->
    <!--</div>-->
    <!-- /BREADCRUMB -->
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            @RenderBody()
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->
    
    <!-- FOOTER -->
    <footer id="footer">
        <!-- bottom footer -->
        <div id="bottom-footer" class="section">
            <div class="container">
                <!-- row -->
                <div class="row">
                    <div class="col-md-4 text-center">


                        <img src="~/Assets/img/personal.png" />

                    </div>
                    <div class="col-md-4 text-center">



                    </div>
                    <div class="col-md-4 text-center">

                        <img src="~/Assets/img/cargo.png" />

                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /bottom footer -->
        <!-- top footer -->
        <div class="section">
            
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">

                    <div _ngcontent-serverapp-c5="" class="container"><p _ngcontent-serverapp-c5="" class="copy text-center text-white">© CRUZ DEL SUR AV. JAVIER PRADO 1109, LA VICTORIA- LIMA PERÚ</p></div>

                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /top footer -->

    </footer>
    <!-- /FOOTER -->
    <!-- jQuery Plugins -->
    <!-- <script src="~/Assets/js/jquery.min.js"></script> -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js" integrity="sha512-UdIMMlVx0HEynClOIFSyOrPggomfhBKJE28LKl8yR3ghkgugPnG6iLfRfHwushZl1MOPSY6TsuBDGPK2X4zYKg==" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js" integrity="sha512-EanukVTZc4W9tUCLnDl069Izidg49PcNRKO1upLzKt9ajq66i+bXOtlzXcIbRhb6vVEGF6BCc8wQi5T1ztCpTQ==" crossorigin="anonymous"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="~/Assets/js/slick.min.js"></script>
    <script src="~/Assets/js/nouislider.min.js"></script>
    <script src="~/Assets/js/jquery.zoom.min.js"></script>
    <script src="~/Assets/js/main.js"></script>
    @RenderSection("MisScripts", false)

</body>
</html>
