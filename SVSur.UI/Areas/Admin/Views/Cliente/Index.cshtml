@model IEnumerable<SVSur.Models.Domain.Cliente>
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>



<br />
<h2>CLIENTES</h2>
<br/>
<div class="row">
    <div class="colm-sm-4">
        <a class="btn btn-primary form-control" href="~/admin/cliente/Insertar">Nuevo</a>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr role="row">
                    <th style="width:40%;">Nombre</th>
                    <th style="width:20%;">Apellido</th>
                    <th style="width:10%;">Sexo</th>
                    <th style="width:10%;">Edad</th>
                    <th style="width:10%;">DNI</th>
                    <th style="width:10%;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Apellido</td>
                        <td>@item.Sexo</td>
                        <td>@item.Edad</td>
                        <td>@item.DNI</td>
                        <td>
                            <a href="~/admin/cliente/modificar/@item.ClienteID" class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> </a>
                            <a href="~/admin/cliente/eliminar/@item.ClienteID" class="btn btn-sm btn-danger" onclick="return confirm('¿Esta seguro de eliminar este registro?')"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<div class="row">
    <div class="col-sm-9">
        <!-- paginacion de datos-->
    </div>
    <div class="col-sm-3">
        <div class="row">
            <diV class="col-sm-8">
                <label for="dropdownMenu1" class="control-label">Estado</label>
            </diV>
            <div class="col-sm-4">
                <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        @(ViewBag.estado== true ? "Activo": "Inactivo")
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a href="~/admin/cliente/index?estado=true">Activo</a></li>
                        <li><a href="~/admin/cliente/index?estado=false">Inactivo</a></li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</div>