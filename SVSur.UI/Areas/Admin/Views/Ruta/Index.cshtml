@model IEnumerable<SVSur.Models.DTO.RutaDTO>
@{
    ViewBag.Title = "Index";
}


<br />
<h2>Rutas</h2>
<br />
<div class="row">
    <div class="colm-sm-4">
        <a class="btn btn-primary form-control" href="~/admin/ruta/insertar">Nuevo</a>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr role="row">
                    <th style="width:30%;">Ciudad Origen</th>
                    <th style="width:30%;">Ciudad destino</th>
                    <th style="width:10%;">Precio</th>
                    <th style="width:10%;">Duracion</th>
                    <th style="width:10%;">Fecha Viaje</th>
                    <th style="width:10%;">Hora Salida</th>
                    <th style="width:10%;">Nombre </th>


                    <th style="width:10%;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.CiudadOrigen</td>
                    <td>@item.Ciudaddestino</td>
                    <td>@item.Precio</td>
                    <td>@item.Duracion</td>
                    <td>@item.FechaViaje</td>
                    <td>@item.HoraSalida</td>
                    <td>@item.Nombre</td>
                    <td>
                        <a href="~/admin/ruta/modificar/@item.RutaID" class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> </a>
                        <a href="~/admin/ruta/eliminar/@item.RutaID" class="btn btn-sm btn-danger" onclick="return confirm('¿Esta seguro de eliminar este registro?')"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

