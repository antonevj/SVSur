@model SVSur.Models.Domain.Ruta
@{
    ViewBag.Title = "Index";
}

<link href="~/Content/principal.css" rel="stylesheet" />
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="https://images6.alphacoders.com/299/thumb-1920-299834.jpg" />
        </div>

        <div class="item">
            <img src="https://images6.alphacoders.com/299/thumb-1920-299834.jpg">
        </div>

        <div class="item">
            <img src="https://images6.alphacoders.com/299/thumb-1920-299834.jpg">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



@using (Html.BeginForm((string)ViewBag.op, "Ruta", FormMethod.Post))
{
    <!--seguridad de los datos-->
    @Html.AntiForgeryToken()

    if (Model != null)
    {
        @Html.HiddenFor(model => model.RutaID)
    }




    <div class="row space-16">&nbsp;</div>
   
        <div class="thumbnail">
            <div class="row">
                <div class="caption text-center">
                    <h2>HOLA, A DONDE NOS VAMOS?</h2>

                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="RutaID" class="control-label">ORIGEN </label>
                            @Html.DropDownListFor(model => model.RutaID, (IEnumerable<SelectListItem>)ViewBag.origen, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RutaID, null, new { @class = "badge badge-danger" })
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="RutaID" class="control-label">DESTINO </label>
                            @Html.DropDownListFor(model => model.RutaID, (IEnumerable<SelectListItem>)ViewBag.destino, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RutaID, null, new { @class = "badge badge-danger" })
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                                          
                                    <label for="bday">FECHA DE VIAJE</label>
                                    <input type="date" id="bday" name="bday" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}">
                                    <span class="validity"></span>       
                           
                        </div>
                        
                    </div>
                    <div class="col-sm-3">
                        
                        <div class="form-group" >
                            <label> </label>
                            <a href="~/admin/ruta/ver" class="btn btn-primary form-control">BUSCAR</a>
                        </div>
                    </div>
                </div>
                    

                </div>
            </div>

   



}



