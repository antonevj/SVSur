@model IEnumerable<SVSur.Models.DTO.RutaDTO>


@{
    ViewBag.Title = "Ver";
}













@using (Html.BeginForm((string)ViewBag.op, "Ruta", FormMethod.Post))
{



    <h5>Servicios Disponibles</h5>

    <div class="row">
        <div class=" caption text-center ">

            @foreach (var item in Model)
            {

                <div class="panel panel-default">


                    <div class="panel-body">

                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="RutaID" class="control-label">ORIGEN </label>
                                <p>  @item.CiudadOrigen</p>

                            </div>
                        </div>

                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="RutaID" class="control-label">DESTINO </label>
                                <p>  @item.Ciudaddestino</p>

                            </div>
                        </div>

                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="RutaID" class="control-label">Hora salida </label>
                                <p>  @item.HoraSalida</p>

                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="RutaID" class="control-label"> fecha de viaje</label>
                                <p>  @item.FechaViaje</p>

                            </div>
                        </div>

                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="RutaID" class="control-label"> Precio</label>
                                <p>  @item.Precio</p>

                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">


                                @if (Request.IsAuthenticated)
                                {
                                    <button class="btn btn-primary form-control">
                                        <ul>
                                            <li><a href="~/Admin/autobus">INGRESAR</a></li>

                                        </ul>
                                    </button>

                                }
                                else
                                {
                                   

                                    <button class="btn btn-primary form-control">
                                        <ul>
                                            <li><a href="~/Account/login">INGRESAR</a></li>

                                        </ul>
                                    </button>

                                }




                            </div>
                        </div>

                    </div>
                </div>
            }


        </div>

    </div>
}

